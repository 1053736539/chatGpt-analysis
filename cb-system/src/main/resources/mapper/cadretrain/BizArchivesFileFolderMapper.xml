<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cb.cadretrain.mapper.BizArchivesFileFolderMapper">

    <resultMap type="BizArchivesFileFolder" id="BizArchivesFileFolderResult">
        <result property="id" column="id"/>
        <result property="sort" column="sort"/>
        <result property="folderId" column="folder_id"/>
        <result property="folderParentId" column="folder_parent_id"/>
        <result property="folderName" column="folder_name"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="selectBizArchivesFileFolderVo">
        select id,
               sort,
               folder_id,
               folder_parent_id,
               folder_name,
               del_flag,
               create_by,
               create_time,
               update_by,
               update_time
        from biz_archives_file_folder
    </sql>

    <select id="selectBizArchivesFileFolderList" parameterType="BizArchivesFileFolder"
            resultMap="BizArchivesFileFolderResult">
        <include refid="selectBizArchivesFileFolderVo"/>
        <where>
            <if test="folderParentId != null  and folderParentId != ''">and folder_parent_id = #{folderParentId}</if>
            <if test="folderName != null  and folderName != ''">and folder_name like concat('%', #{folderName}, '%')
            </if>
        </where>
    </select>

    <select id="selectBizArchivesFileFolderById" parameterType="Integer" resultMap="BizArchivesFileFolderResult">
        <include refid="selectBizArchivesFileFolderVo"/>
        where id = #{id}
    </select>

    <insert id="insertBizArchivesFileFolder" parameterType="BizArchivesFileFolder">
        insert into biz_archives_file_folder
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="sort != null">sort,</if>
            <if test="folderId != null and folderId != ''">folder_id,</if>
            <if test="folderParentId != null and folderParentId != ''">folder_parent_id,</if>
            <if test="folderName != null and folderName != ''">folder_name,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="sort != null">#{sort},</if>
            <if test="folderId != null and folderId != ''">#{folderId},</if>
            <if test="folderParentId != null and folderParentId != ''">#{folderParentId},</if>
            <if test="folderName != null and folderName != ''">#{folderName},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateBizArchivesFileFolder" parameterType="BizArchivesFileFolder">
        update biz_archives_file_folder
        <trim prefix="SET" suffixOverrides=",">
            <if test="sort != null">sort = #{sort},</if>
            <if test="folderId != null and folderId != ''">folder_id = #{folderId},</if>
            <if test="folderParentId != null and folderParentId != ''">folder_parent_id = #{folderParentId},</if>
            <if test="folderName != null and folderName != ''">folder_name = #{folderName},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null and createBy != ''">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBizArchivesFileFolderById" parameterType="Integer">
        delete
        from biz_archives_file_folder
        where id = #{id}
    </delete>

    <delete id="deleteBizArchivesFileFolderByIds" parameterType="String">
        delete from biz_archives_file_folder where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="selectBizFileFolderMapList" resultType="java.util.Map">
        select
        folder_id as id,
        folder_parent_id as parentId,
        folder_name as "label"
        from biz_archives_file_folder
        where del_flag = #{delFlag} <!--and folder_parent_id = #{parentId}-->
    </select>

    <select id="hasChildren" resultType="java.lang.Integer">
        select count(0)
        from (select folder_id
              from biz_archives_file_folder
              where folder_parent_id = #{folderId}
              UNION all
              select folder_id
              from biz_attach
              where folder_id = #{folderId}) as T
    </select>

    <delete id="deleteBizFileFolderByFolderId">
        delete from biz_archives_file_folder where folder_id = #{dolderId}
    </delete>

    <delete id="logicDeleteBizFileFolderByFolderId">
        update biz_archives_file_folder set del_flag =#{delFlag} where  folder_id = #{folderId}
    </delete>

    <update id="updateBizFileFolderByFolderId" parameterType="BizFileFolder">
        update biz_archives_file_folder
        <trim prefix="SET" suffixOverrides=",">
            <if test="sort != null">sort = #{sort},</if>
            <if test="folderParentId != null and folderParentId != ''">folder_parent_id = #{folderParentId},</if>
            <if test="folderName != null">folder_name = #{folderName},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where folder_id = #{folderId}
    </update>
</mapper>