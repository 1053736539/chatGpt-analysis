<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cb.system.mapper.SysUserSupervisorMapper">
    
    <resultMap type="SysUserSupervisor" id="SysUserSupervisorResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="supervisorId"    column="supervisor_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="leader"    column="leader"    />
        <result property="userName"    column="user_name"    />
    </resultMap>

    <sql id="selectSysUserSupervisorVo">
        select id, user_id, supervisor_id, create_time, create_by, update_time, update_by, leader, user_name from sys_user_supervisor
    </sql>

    <select id="selectSysUserSupervisorList" parameterType="SysUserSupervisor" resultMap="SysUserSupervisorResult">
        <include refid="selectSysUserSupervisorVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="supervisorId != null "> and supervisor_id = #{supervisorId}</if>
            <if test="leader != null  and leader != ''"> and leader = #{leader}</if>
            <if test="userName != null  and userName != ''"> and user_name like concat('%', #{userName}, '%')</if>
        </where>
    </select>
    
    <select id="selectSysUserSupervisorById" parameterType="Integer" resultMap="SysUserSupervisorResult">
        <include refid="selectSysUserSupervisorVo"/>
        where user_id = #{id}
    </select>
        
    <insert id="insertSysUserSupervisor" parameterType="SysUserSupervisor">
        insert into sys_user_supervisor
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="userId != null">user_id,</if>
            <if test="supervisorId != null">supervisor_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="createBy != null">create_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="leader != null">leader,</if>
            <if test="userName != null">user_name,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="userId != null">#{userId},</if>
            <if test="supervisorId != null">#{supervisorId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="leader != null">#{leader},</if>
            <if test="userName != null">#{userName},</if>
         </trim>
    </insert>

    <update id="updateSysUserSupervisor" parameterType="SysUserSupervisor">
        update sys_user_supervisor
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="supervisorId != null">supervisor_id = #{supervisorId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="leader != null">leader = #{leader},</if>
            <if test="userName != null">user_name = #{userName},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSysUserSupervisorById" parameterType="Integer">
        delete from sys_user_supervisor where id = #{id}
    </delete>

    <delete id="deleteSysUserSupervisorByIds" parameterType="String">
        delete from sys_user_supervisor where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- 根据用户ID查询负责人记录 -->
    <select id="selectSupervisorByUserId" parameterType="int" resultType="SysUserSupervisor">
        SELECT * FROM sys_user_supervisor WHERE user_id = #{userId}
    </select>

    <delete id="deleteSupervisorByUserId" parameterType="int">
        DELETE FROM sys_user_supervisor WHERE user_id = #{userId}
    </delete>
</mapper>