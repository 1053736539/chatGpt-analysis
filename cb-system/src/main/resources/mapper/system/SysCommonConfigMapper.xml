<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cb.system.mapper.SysCommonConfigMapper">

    <resultMap type="com.cb.system.domain.SysCommonConfig" id="SysCommonConfigResult">
        <result property="id"    column="id"    />
        <result property="enableThreeMember"    column="enable_three_member"    />
        <result property="enablePasswordPolicy"    column="enable_password_policy"    />
        <result property="passwordPolicy"    column="password_policy"    />
        <result property="passwordLength"    column="password_length"    />
        <result property="enablePasswordExpiration"    column="enable_password_expiration"    />
        <result property="passwordExpiration"    column="password_expiration"    />
        <result property="passwordReminderTime"    column="password_reminder_time"    />
