<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cb.seal.mapper.BizSealMapper">
    
    <resultMap type="BizSeal" id="BizSealResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="scope"    column="scope"    />
        <result property="attachId"    column="attach_id"    />
        <result property="status"    column="status"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />

        <result property="attachUrl"    column="attachUrl"    />
        <result property="createByName"    column="createByName"    />
    </resultMap>

    <sql id="selectBizSealVo">
        select t.id, t.name, t.scope, t.attach_id, t.status, t.del_flag, t.create_by, t.create_time, t.update_by, t.update_time, t.remark
            ,a.path as attachUrl
            ,cu.name as createByName
        from biz_seal t
        left join biz_attach a on t.attach_id = a.attach_id
        left join sys_user cu on t.create_by = cu.user_name and cu.del_flag != '2'
    </sql>

    <select id="selectBizSealList" parameterType="BizSeal" resultMap="BizSealResult">
        <include refid="selectBizSealVo"/>
        <where>
            and t.del_flag = '0'
            <if test="name != null  and name != ''"> and t.name like concat('%', #{name}, '%')</if>
            <if test="scope != null  and scope != ''"> and t.scope like concat('%', #{scope}, '%')</if>
            <if test="attachId != null  and attachId != ''"> and t.attach_id = #{attachId}</if>
            <if test="status != null  and status != ''"> and t.status = #{status}</if>
            <if test="createBy != null  and createBy != ''"> and t.create_by = #{createBy}</if>
        </where>
    </select>
    
    <select id="selectBizSealById" parameterType="Long" resultMap="BizSealResult">
        <include refid="selectBizSealVo"/>
        where t.id = #{id}
    </select>
        
    <insert id="insertBizSeal" parameterType="BizSeal">
        insert into biz_seal
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="scope != null and scope != ''">scope,</if>
            <if test="attachId != null and attachId != ''">attach_id,</if>
            <if test="status != null">status,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="scope != null and scope != ''">#{scope},</if>
            <if test="attachId != null and attachId != ''">#{attachId},</if>
            <if test="status != null">#{status},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateBizSeal" parameterType="BizSeal">
        update biz_seal
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="scope != null and scope != ''">scope = #{scope},</if>
            <if test="attachId != null and attachId != ''">attach_id = #{attachId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBizSealById" parameterType="Long">
        delete from biz_seal where id = #{id}
    </delete>

    <delete id="deleteBizSealByIds" parameterType="String">
        delete from biz_seal where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>