<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cb.docArchive.mapper.BizDocArchiveFolderMapper">
    
    <resultMap type="BizDocArchiveFolder" id="BizDocArchiveFolderResult">
        <result property="folderId"    column="folder_id"    />
        <result property="folderName"    column="folder_name"    />
        <result property="parentId"    column="parent_id"    />
        <result property="sort"    column="sort"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />

        <result property="createByName"    column="createByName"    />
    </resultMap>

    <sql id="selectBizDocArchiveFolderVo">
        select f.folder_id, f.folder_name, f.parent_id, f.sort, f.del_flag, f.create_by, f.create_time, f.update_by, f.update_time
            ,cu.name as createByName
        from biz_doc_archive_folder f
        left join sys_user cu on f.create_by = cu.user_name
    </sql>

    <select id="selectBizDocArchiveFolderList" parameterType="BizDocArchiveFolder" resultMap="BizDocArchiveFolderResult">
        <include refid="selectBizDocArchiveFolderVo"/>
        <where>
            and f.del_flag = '1'
            <if test="folderName != null  and folderName != ''"> and f.folder_name like concat('%', #{folderName}, '%')</if>
            <if test="parentId != null  and parentId != ''"> and f.parent_id = #{parentId}</if>
            <if test="sort != null "> and f.sort = #{sort}</if>
        </where>
        order by f.sort asc
    </select>
    
    <select id="selectBizDocArchiveFolderById" parameterType="String" resultMap="BizDocArchiveFolderResult">
        <include refid="selectBizDocArchiveFolderVo"/>
        where f.folder_id = #{folderId}
    </select>
    <select id="findSubChainIds" resultType="java.lang.String">
        select folder_id
        from biz_doc_archive_folder
            start with parent_id = #{folderId}
        connect by prior folder_id = parent_id;
    </select>

    <insert id="insertBizDocArchiveFolder" parameterType="BizDocArchiveFolder">
        insert into biz_doc_archive_folder
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="folderId != null and folderId != ''">folder_id,</if>
            <if test="folderName != null and folderName != ''">folder_name,</if>
            <if test="parentId != null">parent_id,</if>
            <if test="sort != null">sort,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="folderId != null and folderId != ''">#{folderId},</if>
            <if test="folderName != null and folderName != ''">#{folderName},</if>
            <if test="parentId != null">#{parentId},</if>
            <if test="sort != null">#{sort},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateBizDocArchiveFolder" parameterType="BizDocArchiveFolder">
        update biz_doc_archive_folder
        <trim prefix="SET" suffixOverrides=",">
            <if test="folderName != null and folderName != ''">folder_name = #{folderName},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null and createBy != ''">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where folder_id = #{folderId}
    </update>

    <delete id="deleteBizDocArchiveFolderById" parameterType="String">
        delete from biz_doc_archive_folder where folder_id = #{folderId}
    </delete>

    <delete id="deleteBizDocArchiveFolderByIds" parameterType="String">
        delete from biz_doc_archive_folder where folder_id in 
        <foreach item="folderId" collection="array" open="(" separator="," close=")">
            #{folderId}
        </foreach>
    </delete>
</mapper>