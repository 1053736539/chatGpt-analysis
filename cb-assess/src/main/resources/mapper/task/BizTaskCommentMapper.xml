    </insert>

    <update id="updateBizTaskComment" parameterType="BizTaskComment">
        update biz_task_comment
        <trim prefix="SET" suffixOverrides=",">
            <if test="taskId != null and taskId != ''">task_id = #{taskId},</if>
            <if test="comment != null and comment != ''">`comment` = #{comment},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <update id="updateBizTaskComment" parameterType="BizTaskComment" databaseId="dm">
        update biz_task_comment
        <trim prefix="SET" suffixOverrides=",">
            <if test="taskId != null and taskId != ''">task_id = #{taskId},</if>
            <if test="comment != null and comment != ''">"comment" = #{comment},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBizTaskCommentById" parameterType="String">
        delete from biz_task_comment where id = #{id}
    </delete>

    <delete id="deleteBizTaskCommentByTaskId" parameterType="String">
        delete from biz_task_comment where task_id = #{taskId}
    </delete>

    <delete id="deleteBizTaskCommentByIds" parameterType="String">
        delete from biz_task_comment where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="list4Evaluation" resultMap="BizTaskCommentResult">
        <include refid="selectBizTaskCommentVo"/>
        where t.task_id = #{taskId}
        and t.create_by = #{userName}
        and t.create_time &gt;= #{beginTime} and t.create_time &lt;= #{endTime}
    </select>

</mapper>