<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cb.assess.mapper.BizAssessTaskEvaluateTagMapper">

    <resultMap type="BizAssessTaskEvaluateTag" id="BizAssessTaskEvaluateTagResult">
        <result property="id" column="id"/>
        <result property="taskId" column="task_id"/>
        <result property="voteUserId" column="vote_user_id"/>
        <result property="assessedUserId" column="assessed_user_id"/>
        <result property="status" column="status"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <sql id="selectBizAssessTaskEvaluateTagVo">
        select id, task_id, vote_user_id, assessed_user_id, status, create_by, create_time, update_by, update_time, remark from biz_assess_task_evaluate_tag
    </sql>

    <select id="selectBizAssessTaskEvaluateTagList" parameterType="BizAssessTaskEvaluateTag" resultMap="BizAssessTaskEvaluateTagResult">
        <include refid="selectBizAssessTaskEvaluateTagVo"/>
        <where>  
            <if test="taskId != null  and taskId != ''"> and task_id = #{taskId}</if>
            <if test="voteUserId != null "> and vote_user_id = #{voteUserId}</if>
            <if test="assessedUserId != null "> and assessed_user_id = #{assessedUserId}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectBizAssessTaskEvaluateTagById" parameterType="String" resultMap="BizAssessTaskEvaluateTagResult">
        <include refid="selectBizAssessTaskEvaluateTagVo"/>
        where id = #{id}
    </select>

    <insert id="insertBizAssessTaskEvaluateTag" parameterType="BizAssessTaskEvaluateTag">
        insert into biz_assess_task_evaluate_tag
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null and id != ''">id,</if>
            <if test="taskId != null and taskId != ''">task_id,</if>
            <if test="voteUserId != null">vote_user_id,</if>
            <if test="assessedUserId != null">assessed_user_id,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null and id != ''">#{id},</if>
            <if test="taskId != null and taskId != ''">#{taskId},</if>
            <if test="voteUserId != null">#{voteUserId},</if>
            <if test="assessedUserId != null">#{assessedUserId},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>
    <insert id="batchInsertBizAssessTaskEvaluateTag">
        insert into biz_assess_task_evaluate_tag( id, task_id, vote_user_id, assessed_user_id, vote_type,status,
        create_by, create_time, update_by, update_time, remark) values
        <foreach item="item" index="index" collection="list" separator=",">
            ( #{item.id}, #{item.taskId}, #{item.voteUserId}, #{item.assessedUserId},
            #{item.voteType},#{item.status},#{item.createBy},#{item.createTime},#{item.updateBy},#{item.updateTime},#{item.remark})
        </foreach>
    </insert>

    <update id="updateBizAssessTaskEvaluateTag" parameterType="BizAssessTaskEvaluateTag">
        update biz_assess_task_evaluate_tag
        <trim prefix="SET" suffixOverrides=",">
            <if test="taskId != null and taskId != ''">task_id = #{taskId},</if>
            <if test="voteUserId != null">vote_user_id = #{voteUserId},</if>
            <if test="assessedUserId != null">assessed_user_id = #{assessedUserId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>
    <update id="changeEvaluateTagStatus">
        update biz_assess_task_evaluate_tag set status =#{status} where id = #{id}
    </update>

    <update id="batchChangeEvaluateTagStatus">
        update biz_assess_task_evaluate_tag set status =#{status} where id in
        <foreach item="id" collection="ids" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

    <delete id="deleteBizAssessTaskEvaluateTagById" parameterType="String">
        delete from biz_assess_task_evaluate_tag where id = #{id}
    </delete>

    <delete id="deleteBizAssessTaskEvaluateTagByIds" parameterType="String">
        delete from biz_assess_task_evaluate_tag where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="checkEvaluateComplete" resultType="java.lang.Boolean">
        SELECT
        count( 0 )
        FROM
        biz_assess_task_evaluate_tag t
        JOIN v_sys_user u ON u.user_id = t.assessed_user_id
        <where>
            and t.task_id = #{taskId}
            and t.status = '0'
            <if test="deptId != null">and u.dept_id =#{deptId}</if>
        </where>
    </select>
    <select id="selectTaskEvaluateTagListByTaskId" resultMap="BizAssessTaskEvaluateTagResult">
        select id, task_id, vote_user_id, assessed_user_id, status, create_by, create_time, update_by, update_time, remark
        from biz_assess_task_evaluate_tag where task_id = #{taskId}
    </select>

    <delete id="deleteEvaluateTagByTaskId">
        delete from biz_assess_task_evaluate_tag where task_id =#{taskId}
    </delete>
</mapper>