            <if test="assessmentYear != null  and assessmentYear != ''"> and deer.assessment_year = #{assessmentYear}</if>
            <if test="recommendGrade != null  and recommendGrade != ''">
                and deer.recommend_grade = #{recommendGrade}
            </if>
            <if test="isExcellent == 2">
                and deer.recommend_grade != '1'
            </if>
            <if test="isExcellent == 1">
                and deer.recommend_grade = '1'
            </if>
            <if test="recommendGradeExcellent != null "> and deer.recommend_grade_excellent = #{recommendGradeExcellent}</if>
            <if test="number != null "> and deer.number = #{number}</if>
            <if test="escalation != null  and escalation != ''"> and deer.escalation = #{escalation}</if>
            <if test="isPublicity != null  and isPublicity != ''"> and deer.is_publicity = #{isPublicity}</if>
            <if test="name != null  and name != ''"> and u.name like concat('%',#{name},'%') </if>
            <if test="deptName != null  and deptName != ''"> and d.dept_name like concat('%',#{deptName},'%') </if>
        </where>
        order by deer.dept_id,deer.create_time desc
