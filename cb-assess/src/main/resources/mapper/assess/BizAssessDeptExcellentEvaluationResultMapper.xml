    <sql id="selectBizAssessDeptExcellentEvaluationResultVo">
        select deer.id, deer.user_id, deer.dept_id, deer.assessment_year, deer.recommend_grade,
               deer.create_time, deer.update_time, deer.create_by, deer.update_by, deer.del_flag,
               deer.recommend_grade_excellent,deer.identity_type,deer.is_publicity,deer.remark,
               deer.number, deer.escalation,deer.reviewed,u.name,d.dept_name,deer.regular_assessment,
                   deer.is_entry
        from biz_assess_dept_excellent_evaluation_result deer
        inner join sys_user u on deer.user_id=u.user_id
        inner join sys_dept d on deer.dept_id=d.dept_id
    </sql>

