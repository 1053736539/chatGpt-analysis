<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cb.conductInfo.mapper.ConductInfoTypeMapper">
    
    <resultMap type="ConductInfoType" id="ConductInfoTypeResult">
        <result property="id"    column="id"    />
        <result property="code"    column="code"    />
        <result property="name"    column="name"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="desc"    column="desc"    />
    </resultMap>

    <sql id="selectConductInfoTypeVo">
        select id, code, name, del_flag, "desc" from biz_conduct_info_type
    </sql>

    <select id="selectConductInfoTypeList" parameterType="ConductInfoType" resultMap="ConductInfoTypeResult">
        <include refid="selectConductInfoTypeVo"/>
        <where>  
            <if test="code != null  and code != ''"> and code = #{code}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
        </where>
    </select>
    
    <select id="selectConductInfoTypeById" parameterType="String" resultMap="ConductInfoTypeResult">
        <include refid="selectConductInfoTypeVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertConductInfoType" parameterType="ConductInfoType">
        insert into biz_conduct_info_type
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="code != null and code != ''">code,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="desc != null">"desc",</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="code != null and code != ''">#{code},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="desc != null">#{desc},</if>
         </trim>
    </insert>

    <update id="updateConductInfoType" parameterType="ConductInfoType">
        update biz_conduct_info_type
        <trim prefix="SET" suffixOverrides=",">
            <if test="code != null and code != ''">code = #{code},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="desc != null">"desc" = #{desc},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteConductInfoTypeById" parameterType="String">
        delete from biz_conduct_info_type where id = #{id}
    </delete>

    <delete id="deleteConductInfoTypeByIds" parameterType="String">
        delete from biz_conduct_info_type where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>