    <delete id="deleteCensusDeptById" parameterType="Long">
        update census_dept set del_flag = '2' where dept_id = #{deptId}
    </delete>

    <delete id="deleteCensusDeptByIds" parameterType="String">
        delete from census_dept where dept_id in 
        <foreach item="deptId" collection="array" open="(" separator="," close=")">
            #{deptId}
        </foreach>
    </delete>

    <select id="hasChildByDeptId" parameterType="Long" resultType="int">
        select count(1) from census_dept
        where del_flag = '0' and parent_id = #{deptId} limit 1
    </select>

    <delete id="deleteAllCensusDepts">
