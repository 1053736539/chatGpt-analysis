    <sql id="selectCensusDeptVo">
        select dept_id, parent_id, ancestors, dept_name, order_num, leader, phone, email, status, del_flag, create_by, create_time, update_by, update_time, dept_code, dept_abbreviation, dept_type, region, affiliations, dept_institution, org_level, established_time, application_date, approval_date, principal_leader_no, assistant_leader_no, administrative_staffing, cause_org_public, cause_org_private, workforce_headcount, other_headcount, ratify_number, application_number, approval_number, remarks, leader_number from census_dept
    </sql>

    <sql id="selectCensusDeptVo1">
        select d.dept_id, d.parent_id, d.ancestors, d.dept_name, d.order_num, d.leader, d.phone, d.email,
               d.status, d.del_flag, d.create_by,d.dept_code,d.dept_abbreviation,
               d.create_time, d.dept_type,d.region,d.affiliations,d.dept_institution,d.org_level,d.established_time,
               d.approval_date,d.principal_leader_no,d.assistant_leader_no,d.administrative_staffing,
               d.cause_org_public,d.cause_org_private,d.workforce_headcount,d.other_headcount,d.ratify_number,d.application_number,
               d.approval_number,d.leader_number,d.remarks
        from census_dept d
    </sql>

    <select id="selectCensusDeptList" parameterType="CensusDept" resultMap="CensusDeptResult">
        <include refid="selectCensusDeptVo1"/>
        where d.del_flag = '0'
        <if test="parentId != null and parentId != 0">
            AND (parent_id = #{parentId} OR dept_id = #{parentId})
        </if>
        <if test="deptName != null and deptName != ''">
            AND dept_name like concat('%', #{deptName}, '%')
        </if>
        <if test="deptCode != null and deptCode != ''">
            AND dept_code like concat('%', #{deptCode}, '%')
        </if>
        <if test="status != null and status != ''">
            AND status = #{status}
        </if>
        <!-- 数据范围过滤 -->
        ${params.dataScope}
        order by d.dept_code, d.parent_id, d.order_num
    </select>

    <select id="checkDeptNameUnique" resultMap="CensusDeptResult">
        <include refid="selectCensusDeptVo1"/>
        where dept_name=#{deptName} and parent_id = #{parentId} limit 1
    </select>
    
    <select id="selectCensusDeptById" parameterType="Long" resultMap="CensusDeptResult">
        <include refid="selectCensusDeptVo1"/>
        where dept_id = #{deptId}
    </select>

    <select id="selectNormalChildrenDeptById" parameterType="Long" resultType="int">
        select count(*) from census_dept where status = 0 and del_flag = '0' and find_in_set(#{deptId}, ancestors)
    </select>

    <select id="selectChildrenDeptById" parameterType="Long" resultMap="CensusDeptResult">
