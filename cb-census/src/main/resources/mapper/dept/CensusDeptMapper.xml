    </delete>

    <!-- 根据部门代码精确查询部门ID -->
    <select id="getCensusDeptIdByCode" resultType="java.lang.Long">
        SELECT dept_id
        FROM census_dept
        WHERE dept_code = #{deptCode}
        LIMIT 1
    </select>

    <!-- 根据部门代码模糊查询部门ID -->
    <select id="getCensusDeptIdByCodeFuzzy" resultType="java.lang.Long">
