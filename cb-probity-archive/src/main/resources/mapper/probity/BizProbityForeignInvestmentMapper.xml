<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cb.probity.mapper.BizProbityForeignInvestmentMapper">

    <resultMap type="BizProbityForeignInvestment" id="BizProbityForeignInvestmentResult">
        <result property="id" column="id"/>
        <result property="probityId" column="probity_id"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
        <result property="investor" column="investor"/>
        <result property="countryRegion" column="country_region"/>
        <result property="investmentSituation" column="investment_situation"/>
        <result property="currency" column="currency"/>
        <result property="amount" column="amount"/>
    </resultMap>

    <sql id="selectBizProbityForeignInvestmentVo">
        select id,
               probity_id,
               create_by,
               create_time,
               update_by,
               update_time,
               remark,
               investor,
               country_region,
               investment_situation,
               currency,
               amount
        from biz_probity_foreign_investment
    </sql>

    <select id="selectBizProbityForeignInvestmentList" parameterType="BizProbityForeignInvestment"
            resultMap="BizProbityForeignInvestmentResult">
        <include refid="selectBizProbityForeignInvestmentVo"/>
        <where>
            <if test="probityId != null  and probityId != ''">and probity_id = #{probityId}</if>
            <if test="investor != null  and investor != ''">and investor = #{investor}</if>
            <if test="countryRegion != null  and countryRegion != ''">and country_region = #{countryRegion}</if>
            <if test="investmentSituation != null  and investmentSituation != ''">and investment_situation =
                #{investmentSituation}
            </if>
            <if test="currency != null  and currency != ''">and currency = #{currency}</if>
            <if test="amount != null ">and amount = #{amount}</if>
            <!-- 数据范围过滤 -->
            ${params.dataScope}
        </where>
    </select>

    <select id="selectBizProbityForeignInvestmentById" parameterType="String"
            resultMap="BizProbityForeignInvestmentResult">
        <include refid="selectBizProbityForeignInvestmentVo"/>
        where id = #{id}
    </select>

    <insert id="insertBizProbityForeignInvestment" parameterType="BizProbityForeignInvestment">
        insert into biz_probity_foreign_investment
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null and id != ''">id,</if>
            <if test="probityId != null">probity_id,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
            <if test="investor != null">investor,</if>
            <if test="countryRegion != null">country_region,</if>
            <if test="investmentSituation != null">investment_situation,</if>
            <if test="currency != null">currency,</if>
            <if test="amount != null">amount,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null and id != ''">#{id},</if>
            <if test="probityId != null">#{probityId},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
            <if test="investor != null">#{investor},</if>
            <if test="countryRegion != null">#{countryRegion},</if>
            <if test="investmentSituation != null">#{investmentSituation},</if>
            <if test="currency != null">#{currency},</if>
            <if test="amount != null">#{amount},</if>
        </trim>
    </insert>

    <insert id="insertBatch" keyProperty="id">
        insert into biz_probity_foreign_investment
        <trim prefix="(" suffix=")" suffixOverrides=",">
            id,
            probity_id,
            create_by,
            create_time,
            update_by,
            update_time,
            remark,
            investor,
            country_region,
            investment_situation,
            currency,
            amount,
        </trim>
        values
        <foreach collection="entities" item="entity" separator=",">
            <trim prefix="(" suffix=")" suffixOverrides=",">
                #{entity.id},
                #{entity.probityId},
                #{entity.createBy},
                #{entity.createTime},
                #{entity.updateBy},
                #{entity.updateTime},
                #{entity.remark},
                #{entity.investor},
                #{entity.countryRegion},
                #{entity.investmentSituation},
                #{entity.currency},
                #{entity.amount},
            </trim>
        </foreach>
    </insert>

    <update id="updateBizProbityForeignInvestment" parameterType="BizProbityForeignInvestment">
        update biz_probity_foreign_investment
        <trim prefix="SET" suffixOverrides=",">
            <if test="probityId != null">probity_id = #{probityId},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="investor != null">investor = #{investor},</if>
            <if test="countryRegion != null">country_region = #{countryRegion},</if>
            <if test="investmentSituation != null">investment_situation = #{investmentSituation},</if>
            <if test="currency != null">currency = #{currency},</if>
            <if test="amount != null">amount = #{amount},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBizProbityForeignInvestmentById" parameterType="String">
        delete
        from biz_probity_foreign_investment
        where id = #{id}
    </delete>

    <delete id="deleteBizProbityForeignInvestmentByIds" parameterType="String">
        delete from biz_probity_foreign_investment where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>